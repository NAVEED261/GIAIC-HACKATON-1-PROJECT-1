{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Modules Schema",
  "description": "Validates modules.json data file for Physical AI textbook",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "title",
      "moduleNumber",
      "weekRange",
      "estimatedHours",
      "learningOutcomes"
    ],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique module identifier",
        "pattern": "^module-[1-4]-[a-z0-9-]+$"
      },
      "title": {
        "type": "string",
        "description": "Module title",
        "minLength": 5,
        "maxLength": 50
      },
      "moduleNumber": {
        "type": "integer",
        "description": "Module number (1-4)",
        "minimum": 1,
        "maximum": 4
      },
      "weekRange": {
        "type": "string",
        "description": "Week range (e.g., '3-5')",
        "pattern": "^[0-9]+-[0-9]+$"
      },
      "estimatedHours": {
        "type": "number",
        "description": "Total hours for module",
        "minimum": 1,
        "maximum": 100
      },
      "learningOutcomes": {
        "type": "array",
        "description": "Key learning outcomes (3-5 recommended)",
        "items": {
          "type": "string",
          "minLength": 10
        },
        "minItems": 3,
        "maxItems": 5
      },
      "capstoneIntegration": {
        "type": "string",
        "description": "How module contributes to capstone"
      },
      "color": {
        "type": "string",
        "description": "Module color (hex code)",
        "pattern": "^#[0-9a-fA-F]{6}$"
      }
    }
  },
  "minItems": 4,
  "maxItems": 4
}
